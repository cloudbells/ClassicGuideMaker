<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <Frame name="WOTLKCFrame" parent="UIParent" frameStrata="DIALOG" clampedToScreen="true" movable="true" resizable="true" inherits="WOTLKCBorderedFrameTemplate">
        <Size x="300" y="200" />
        <ResizeBounds>
            <minResize x="300" y="200" />
            <maxResize x="500" y="400" />
        </ResizeBounds>
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture>
                    <Color r="0" g="0" b="0" a="1" />
                    <Anchors>
                        <Anchor point="TOPLEFT" />
                        <Anchor point="BOTTOMRIGHT" />
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <Button name="$parentOptionsButton">
                <Size x="20" y="20" />
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-2" y="-2" />
                </Anchors>
                <NormalTexture name="$parentNormal" file="Interface/Addons/WOTLKCompanion/Media/OptionsIcon" />
                <HighlightTexture name="$parentHighlight" file="Interface/Addons/WOTLKCompanion/Media/OptionsIcon"  />
                <PushedTexture name="$parentPushed" file="Interface/Addons/WOTLKCompanion/Media/OptionsIcon" />
                <Scripts>
                    <OnClick function="WOTLKC_OptionsButton_OnClick" />
                </Scripts>
            </Button>
            <Frame name="$parentTitleFrame">
                <Size x="1" y="24" />
                <Anchors>
                    <Anchor point="TOPLEFT" />
                    <Anchor point="TOPRIGHT" />
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <FontString name="$parentText" inherits="WOTLKCFontTemplate">
                            <Size x="200" /> <!-- temp -->
                            <Anchors>
                                <Anchor point="LEFT" x="4" />
                            </Anchors>
                        </FontString>
                        <Texture parentKey="background">
                            <Anchor point="TOPLEFT" />
                            <Anchor point="BOTTOMRIGHT" />
                        </Texture>
                    </Layer>
                </Layers>
                <Scripts>
                    <OnMouseDown>
                        self:GetParent():StartMoving()
                    </OnMouseDown>
                    <OnMouseUp>
                        self:GetParent():StopMovingOrSizing()
                    </OnMouseUp>
                </Scripts>
            </Frame>
            <Frame name="$parentBodyFrame">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentTitleFrame" relativePoint="BOTTOMLEFT" />
                    <Anchor point="BOTTOMRIGHT" />
                </Anchors>
                <Frames>
                    <Slider name="WOTLKCSlider" obeyStepOnDrag="true" orientation="VERTICAL" minValue="1" maxValue="1" defaultValue="1" valueStep="1">
                        <Size x="18" /> <!-- Default size. -->
                        <Anchors>
                            <Anchor point="BOTTOMRIGHT" y="20" />
                            <Anchor point="TOPRIGHT" y="-20" />
                        </Anchors>
                        <ThumbTexture parentKey="thumb" file="Interface/Addons/WOTLKCompanion/Media/ThumbTexture">
                            <Size x="16" y="16" />
                        </ThumbTexture>
                        <Layers>
                            <Layer level="BORDER">
                                <Texture name="$parentLeftBorder">
                                    <Size x="1" y="1" />
                                    <Color r="1" g="1" b="1" a="1" />
                                    <Anchors>
                                        <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMLEFT" x="0" y="-20" />
                                        <Anchor point="TOPRIGHT" relativePoint="TOPLEFT" x="0" y="20" />
                                    </Anchors>
                                </Texture>
                            </Layer>
                        </Layers>
                        <Frames>
                            <Button name="$parentUpButton" parentKey="upButton" inherits="WOTLKCHighlightFrameTemplate, WOTLKCBorderedFrameTemplate" registerForClicks="LeftButtonUp">
                                <Size x="18" y="18" />
                                <Anchors>
                                    <Anchor point="TOPRIGHT" y="20" />
                                </Anchors>
                                <Layers>
                                    <Layer level="BACKGROUND">
                                        <Texture parentKey="buttonTexture" file="Interface/Addons/WOTLKCompanion/Media/UpButton">
                                            <Anchors>
                                                <Anchor point="TOPLEFT" />
                                                <Anchor point="BOTTOMRIGHT" />
                                            </Anchors>
                                        </Texture>
                                    </Layer>
                                </Layers>
                                <Scripts>
                                    <OnDisable>
                                        self.buttonTexture:SetVertexColor(0.3, 0.3, 0.3)
                                    </OnDisable>
                                    <OnEnable>
                                        self.buttonTexture:SetVertexColor(1, 1, 1)
                                    </OnEnable>
                                    <OnClick>
                                        WOTLKC_OnScroll(self, 1)
                                    </OnClick>
                                </Scripts>
                            </Button>
                            <Button name="$parentDownButton" parentKey="downButton" inherits="WOTLKCHighlightFrameTemplate, WOTLKCBorderedFrameTemplate" registerForClicks="LeftButtonUp">
                                <Size x="18" y="18" />
                                <Anchors>
                                    <Anchor point="BOTTOMRIGHT" y="-20" />
                                </Anchors>
                                <Layers>
                                    <Layer level="BACKGROUND">
                                        <Texture parentKey="buttonTexture" file="Interface/Addons/WOTLKCompanion/Media/DownButton">
                                            <Anchors>
                                                <Anchor point="TOPLEFT" />
                                                <Anchor point="BOTTOMRIGHT" />
                                            </Anchors>
                                        </Texture>
                                    </Layer>
                                </Layers>
                                <Scripts>
                                    <OnDisable>
                                        self.buttonTexture:SetVertexColor(0.3, 0.3, 0.3)
                                    </OnDisable>
                                    <OnEnable>
                                        self.buttonTexture:SetVertexColor(1, 1, 1)
                                    </OnEnable>
                                    <OnClick>
                                        WOTLKC_OnScroll(self, -1)
                                    </OnClick>
                                </Scripts>
                            </Button>
                        </Frames>
                        <Scripts>
                            <OnValueChanged function="WOTLKC_Slider_OnValueChanged" />
                            <OnDisable>
                                self.thumb:SetVertexColor(0.3, 0.3, 0.3)
                            </OnDisable>
                            <OnEnable>
                                self.thumb:SetVertexColor(1, 1, 1)
                            </OnEnable>
                        </Scripts>
                    </Slider>
                    <Button name="$parentResizeButton" frameLevel="3">
                        <Size x="16" y="16" />
                        <Anchors>
                            <Anchor point="BOTTOMRIGHT" x="-18" y="-1" />
                        </Anchors>
                        <NormalTexture name="$parentNormal" file="Interface/ChatFrame/UI-ChatIM-SizeGrabber-Up" />
                        <HighlightTexture name="$parentHighlight" file="Interface/ChatFrame/UI-ChatIM-SizeGrabber-Highlight" />
                        <PushedTexture name="$parentPushed" file="Interface/ChatFrame/UI-ChatIM-SizeGrabber-Down" />
                        <Scripts>
                            <OnMouseDown>
                                WOTLKCFrame:StartSizing("BOTTOMRIGHT")
                            </OnMouseDown>
                            <OnMouseUp>
                                WOTLKCFrame:StopMovingOrSizing()
                            </OnMouseUp>
                        </Scripts>
                    </Button>
                </Frames>
            </Frame>
        </Frames>
        <Scripts>
            <OnLoad inherit="append">
                WOTLKCFrame_OnLoad()
            </OnLoad>
            <OnEvent>
                WOTLKCFrame_OnEvent(self, event, ...)
            </OnEvent>
            <OnSizeChanged function="WOTLKC_OnSizeChanged" />
            <OnMouseWheel function="WOTLKC_OnScroll" />
        </Scripts>
    </Frame>
</Ui>
