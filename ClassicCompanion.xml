<Ui>
    <FontString name="ClassicCompanionTextTemplate" font="Fonts/FRIZQT__.ttf" outline="NORMAL" justifyH="CENTER" virtual="true">
        <FontHeight>
            <AbsValue val="12" />
        </FontHeight>
    </FontString>
    <Button name="ClassicCompanionStepFrameTemplate" virtual="true">
        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="$parentBackground" /> <!-- Will be colored depending on step completion -->
            </Layer>
        </Layers>
    </Button>
    <Frame name="ClassicCompanionFrame" parent="UIParent" clampedToScreen="true" enableMouse="true" movable="true" resizable="true">
        <Size x="300" y="150" />
        <ResizeBounds>
            <minResize x="150" y="150" />
        </ResizeBounds>
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>
        <Frames>
            <Button name="$parentResizeButton"> <!-- Main frame resize button -->
                <Size x="16" y="16" />
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" />
                </Anchors>
                <NormalTexture name="$parentNormal" file="Interface/ChatFrame/UI-ChatIM-SizeGrabber-Up" alphaMode="ADD" />
                <HighlightTexture name="$parentHighlight" file="Interface/ChatFrame/UI-ChatIM-SizeGrabber-Up" alphaMode="ADD" />
                <PushedTexture name="$parentPushed" file="Interface/ChatFrame/UI-ChatIM-SizeGrabber-Up" alphaMode="ADD" />
                <Scripts>
                    <OnMouseDown>
                        self:GetParent():StartSizing("BOTTOMRIGHT")
                    </OnMouseDown>
                    <OnMouseUp>
                        self:GetParent():StopMovingOrSizing()
                    </OnMouseUp>
                </Scripts>
            </Button>
            <Button name="$parentOptionsButton" desaturated="true">
                <Size x="20" y="20" />
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-2" y="-2" />
                </Anchors>
                <NormalTexture name="$parentNormal" file="Interface/Buttons/UI-OptionsButton" alphaMode="ADD" />
                <HighlightTexture name="$parentHighlight" file="Interface/Buttons/UI-OptionsButton" alphaMode="ADD" />
                <PushedTexture name="$parentPushed" file="Interface/Buttons/UI-OptionsButton" alphaMode="ADD" />
            </Button>
            <Frame name="$parentTitleFrame">
                <Size x="1" y="24" />
                <Anchors>
                    <Anchor point="TOP" />
                    <Anchor point="RIGHT" />
                    <Anchor point="LEFT" />
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <FontString name="$parentText" inherits="ClassicCompanionTextTemplate"> <!-- Guide name -->
                            <Anchors>
                                <Anchor point="CENTER" x="0" y="0" />
                                <Anchor point="RIGHT" x="-2" y="" /> <!-- This achieves text wrapping -->
                                <Anchor point="LEFT" x="2" y="" /> <!-- This achieves text wrapping -->
                            </Anchors>
                        </FontString>
                        <Texture name="$parentBackground">
                            <Anchor point="TOPLEFT" />
                            <Anchor point="BOTTOMRIGHT" />
                        </Texture>
                    </Layer>
                    <Layer level="BORDER">
                        <Texture name="$parentBorder"> <!-- Title frame border texture -->
                            <Size x="1" y="1" />
                            <Color r="0" g="0" b="0" a="1" />
                            <Anchors>
                                <Anchor point="TOPRIGHT" relativeTo="ClassicCompanionFrameTitleFrame" relativePoint="BOTTOMRIGHT" />
                                <Anchor point="TOPLEFT" relativeTo="ClassicCompanionFrameTitleFrame" relativePoint="BOTTOMLEFT" />
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
            </Frame>
            <Frame name="$parentBodyFrame">
                <Anchors>
                    <Anchor point="TOP" relativeTo="ClassicCompanionFrameTitleFrame" relativePoint="BOTTOM" x="" y="" />
                    <Anchor point="RIGHT" />
                    <Anchor point="BOTTOMLEFT" />
                </Anchors>
            </Frame>
        </Frames>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="$parentBackground"> <!-- Main frame background texture -->
                    <Color r="0.15" g="0.15" b="0.15" a="0.75" />
                </Texture>
            </Layer>
            <Layer level="BORDER">
                <Texture name="$parentTopBorder"> <!-- Main frame top border texture -->
                    <Size x="1" y="1" />
                    <Color r="0" g="0" b="0" a="1" />
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT" x="0" y="-1" />
                        <Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT" x="0" y="-1" />
                    </Anchors>
                </Texture>
                <Texture name="$parentRightBorder"> <!-- Main frame right border texture -->
                    <Size x="1" y="1" />
                    <Color r="0" g="0" b="0" a="1" />
                    <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="-1" y="0" />
                        <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" x="-1" y="0" />
                    </Anchors>
                </Texture>
                <Texture name="$parentBottomBorder"> <!-- Main frame bottom border texture -->
                    <Size x="1" y="1" />
                    <Color r="0" g="0" b="0" a="1" />
                    <Anchors>
                        <Anchor point="TOPRIGHT" relativePoint="BOTTOMRIGHT" x="0" y="1" />
                        <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" x="0" y="1" />
                    </Anchors>
                </Texture>
                <Texture name="$parentLeftBorder"> <!-- Main frame left border texture -->
                    <Size x="1" y="1" />
                    <Color r="0" g="0" b="0" a="1" />
                    <Anchors>
                        <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMLEFT" x="1" y="0" />
                        <Anchor point="TOPRIGHT" relativePoint="TOPLEFT" x="1" y="0" />
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Scripts>
            <OnDragStart>
                self:StartMoving()
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing()
            </OnDragStop>
        </Scripts>
    </Frame>
</Ui>
